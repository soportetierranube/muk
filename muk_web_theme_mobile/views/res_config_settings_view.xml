<odoo>
	
	<record id="res_config_settings_view_form_base" model="ir.ui.view">
    	<field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
	    <field name="arch" type="xml">
			<xpath expr="//div[@id='multi_company']" position="after">
    		 	<h2>Cloud Messaging</h2>
                <div class="row mt16 o_settings_container" name="web_cloud_messaging">
                	<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_right_pane">
							<label for="theme_cm_sender_id" string="Sender ID" />
							<div class="text-muted">
								Cloud Messaging Server ID
							</div>
							<div class="mt8">
				                <field name="theme_cm_sender_id" class="o_light_label"/>
				            </div>
						</div>
                    </div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<label for="theme_cm_server_key" string="Server Key" />
							<div class="text-muted">
								Cloud Messaging Server Key
							</div>
							<div class="mt8">
				                <field name="theme_cm_server_key" class="o_light_label"/>
				            </div>
						</div>
					</div>
				</div>
	    	</xpath>
	    </field>
	</record>
           	
	<record id="res_config_settings_view_form_web_branding" model="ir.ui.view">
    	<field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="muk_web_branding.res_config_settings_view_form"/>
	    <field name="arch" type="xml">
	    	<xpath expr="//div[@name='branding_brand_colors']" position="after">
	    		<h2>Mobile</h2>
	            <div class="row mt16 o_settings_container" name="web_theme_mobile">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<span class="o_form_label">Names &amp; Colors</span>
							<div class="text-muted">
								Specify the mobile app names and colors
							</div>
							<div class="content-group">
								<div class="mt16 row">
									<label for="theme_mobile_screen_name" string="App Name" class="col-lg-3 o_light_label" />
									<field name="theme_mobile_screen_name" class="oe_inline" />
                                	<div class="w-100"></div> 
									<label for="theme_mobile_menu_name" string="Short Name" class="col-lg-3 o_light_label" />
									<field name="theme_mobile_menu_name" class="oe_inline" />
                                	<div class="w-100"></div>          
									<label for="theme_mobile_theme_color" string="Theme" class="col-lg-3 o_light_label" />
									<field name="theme_mobile_theme_color" widget="color" class="oe_inline" />
                                	<div class="w-100"></div>                                	
                                	<label for="theme_mobile_background_color" string="Background" class="col-3 o_light_label"/>
                                	<field name="theme_mobile_background_color" widget="color" class="oe_inline"/>
								</div>
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<span class="o_form_label">Icon</span>
							<div class="text-muted">
								Set the mobile icon
							</div>
							<div class="content-group">
								<div class="mt16 row">
									<field name="theme_mobile_icon" widget="image" class="ml-4 oe_inline oe_avatar" />
								</div>
							</div>
						</div>
					</div>
	        	</div>
	    	</xpath>
	    </field>
	</record>
	
</odoo>
